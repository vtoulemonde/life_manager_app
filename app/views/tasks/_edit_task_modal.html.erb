
<script type="text/ng-template" id="myModalEditTask.html">
    <div class="modal-header">
        <h3 class="modal-title">Edit task</h3>
    </div>
    <form name="taskForm" ng-submit="taskForm.$valid && ok()" novalidate>
        <div class="modal-body">
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control " ng-model="editTask.title" placeholder="Title" required>
            </div>
            <div class="form-group">
                <label>Description</label>
               <textarea class="form-control" ng-model="editTask.description" rows="3">{{editTask.description}}</textarea>
            </div>
            <div class="form-group">
                <label>Status</label>
                <label class="radio-inline" ng-repeat="status in statusList">
                    <input type="radio" name="statusRadioOptions" ng-model="editTask.status" value="{{status}}"> {{status}}
                </label>
            </div>
            <div class="form-group">
                <label>Affected to</label>
                <select ng-model="editTask.user_id" 
                        ng-options="member.user.id as member.user.username for member in allMembers" 
                        class="form-control">
                    <option value="">-- Not affected --</option>
                </select>
            </div>
            <div class="form-group">
                <label>Tag</label>
                <input type="text" class="form-control" ng-model="editTask.tag" placeholder="Tag">
                <em class="text-muted">Help you filter the tasks on a tag</em>
            </div>

        </div>
        <div class="modal-footer">
            <button class="btn btn-default" type="submit">Save</button>
            <button class="btn btn-default" ng-click="cancel()">Cancel</button>
        </div>
    </form>
</script>