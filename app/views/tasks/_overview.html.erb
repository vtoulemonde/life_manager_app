<div class="row">
	<h1>All tasks affected to me</h1>
	<div class="col-md-3" ng-repeat="project in projectsOverview">
		<div class="panel panel-info">
		  	<!-- Project Title -->
		  	<div class="panel-heading">
		  		<h3 class="panel-title">Project "{{project.title}}"</h3>
		  	</div>

		  	<!-- Lists and tasks -->
		  	<div class="list-group" ng-repeat="list in project.lists">
				<a class="list-group-item disabled">{{list.title}}</a>
				<a href="#" 
					class="list-group-item" 
					ng-repeat="task in list.tasks" 
					ng-init="task.detail = false" 
					ng-click="task.detail = !task.detail">
						{{task.title}}
						<div ng-show="task.detail">
							<small><em>{{task.status}}</em></small><br>
							<small><em>{{task.description}}</em></small>
						</div>
				</a>
			</div>
		</div>
	</div>

</div>